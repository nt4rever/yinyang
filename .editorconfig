# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = space
indent_size = 4
max_line_length = 120

# Blade templates
[*.blade.php]
indent_style = space
indent_size = 4
max_line_length = 120

# JavaScript, TypeScript, Vue, CSS, SCSS, SASS
[*.{js,ts,vue,css,scss,sass}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Configuration files
[*.{ini,conf}]
indent_style = space
indent_size = 4

# Environment files
[.env*]
indent_style = space
indent_size = 4

# Composer files
[composer.json]
indent_style = space
indent_size = 4

# Package.json
[package.json]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
